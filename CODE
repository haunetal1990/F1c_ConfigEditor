                TextBox13.Text = INI_ReadValueFromFile("COMPONENTS", "OPTIONSDIR", TextBox13.Text, ".\config.ini")
                TextBox8.Text = INI_ReadValueFromFile("COMPONENTS", "REPLAYDIR", TextBox8.Text, ".\config.ini")
